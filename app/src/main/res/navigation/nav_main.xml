    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.kotlinmusicapp.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_mysongFragment"
            app:destination="@id/mysongFragment" />
    </fragment>
    <fragment
        android:id="@+id/mysongFragment"
        android:name="com.example.kotlinmusicapp.ui.home.MysongFragment"
        android:label="fragment_mysong"
